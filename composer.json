{
    "name":         "kietlieng/mink-goutte-driver",
    "description":  "Goutte driver for Mink framework",
    "keywords":     ["goutte", "headless", "testing", "browser"],
    "type":         "mink-driver",
    "license":      "MIT",

    "authors": [
        {
            "name":      "Kiet Lieng"
        }
    ],

    "require": {
        "php":                           ">=5.3.1",
        "kietlieng/mink":                    "~1.6@dev",
        "kietlieng/mink-browserkit-driver":  "~1.2@dev",
        "fabpot/goutte":                 "~1.0.4|~2.0|~3.1"
    },

    "require-dev": {
        "symfony/phpunit-bridge": "~2.7|~3.0"
    },

    "autoload": {
        "psr-4": {
            "Behat\\Mink\\Driver\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "Behat\\Mink\\Tests\\Driver\\": "tests"
        }
    },

    "extra": {
        "branch-alias": {
            "dev-master": "1.2.x-dev"
        }
    }
}
